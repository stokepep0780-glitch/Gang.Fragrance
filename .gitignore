body { font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #f4f4f4; }
header { background-color: #333; color: white; padding: 1rem; text-align: center; }
nav a { color: white; margin: 0 1rem; text-decoration: none; }
section { padding: 2rem; text-align: center; }
.produk-list { display: flex; justify-content: space-around; flex-wrap: wrap; }
.produk { background: white; padding: 1rem; margin: 1rem; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
footer { background-color: #333; color: white; text-align: center; padding: 1rem; }
